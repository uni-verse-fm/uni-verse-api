    "cookie-parser": "^1.4.6",
    "crypto-js": "^4.2.0",
    "graphql": "^16.8.1",
    "joi": "^17.13.1",
    "minio": "^8.0.0",
    "mongoose": "^8.4.0",
    "nest-winston": "^1.10.0",
    "nestjs-minio-client": "^2.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
